<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <fragment
        android:id="@+id/sceneform_fragment"
        android:name="com.google.ar.sceneform.ux.ArFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="19dp"
        tools:layout_editor_absoluteY="-203dp" />

    <TextView
        android:id="@+id/num_O"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="232dp"
        android:layout_marginTop="88dp"
        android:text="num_O"
        android:textColor="#333333"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/btn_moleC"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="268dp"
        android:fontFamily="monospace"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_done"
        android:layout_width="86dp"
        android:layout_height="75dp"
        android:layout_marginEnd="128dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/tick"
        android:backgroundTint="#68C148"
        android:text="done"
        android:textColor="#333333"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btn_next"
        android:layout_width="78dp"
        android:layout_height="66dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/btn_next"
        android:backgroundTint="?android:attr/colorPressedHighlight"
        android:text="next"
        android:textColor="#333333"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btn_back"
        android:layout_width="51dp"
        android:layout_height="51dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/settings"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/btn_moleC"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginStart="204dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/atom_c"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/btn_moleH"
        android:layout_width="110dp"
        android:layout_height="95dp"
        android:layout_marginStart="292dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/atom_h"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/btn_moleO"
        android:layout_width="68dp"
        android:layout_height="70dp"
        android:layout_marginStart="420dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/atom_o"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/txt_shoot_center"
        android:layout_width="88dp"
        android:layout_height="83dp"
        android:layout_marginBottom="148dp"
        android:background="@drawable/center"
        android:rotation="15"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.499"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_shoot"
        android:layout_width="123dp"
        android:layout_height="78dp"
        android:layout_marginTop="316dp"
        android:layout_marginEnd="608dp"
        android:background="@drawable/aim"
        android:radius="90dp"
        android:text="Fetch"
        android:textColor="#333333"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/num_C"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="88dp"
        android:text="num_c"
        android:textColor="#333333"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/btn_moleC"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/num_H"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="88dp"
        android:text="num_H"
        android:textColor="#333333"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/btn_moleH"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_question"
        android:layout_width="145dp"
        android:layout_height="67dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="28dp"
        android:background="@drawable/textbox"
        android:gravity="center"
        android:text="C3H6"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>